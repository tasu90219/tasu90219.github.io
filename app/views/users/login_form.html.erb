<div class="main users-new">
<div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
        <div class="form-body">
            <% if @error_message %>
            <div class="form-error">
                <%= @error_message %>
            </div>
            <% end %>
        <div class="form-item">    
        <%= form_tag("/login") do %>
        <p>メールアドレス</p>
        <input name="email" value="<%= @email%>">
        <p>パスワード</p>
        <input name="password" type="password" value="<%= @email%>">
        <div class="btn">
        <input class="btn2"type="submit" value="ログイン">
        </div>
        <% end %>
        </div>
        </div>
    </div>
</div>
</div>