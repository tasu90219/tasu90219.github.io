<div class="main user-show">
    <div class="container">
    <div class="user">
        <h2><%= @user.name%></h2>
        <p><%= @user.email%></p>
        <p><%= @user.gender%></p>
        <p><%= @user.age%></p>

        <%  if @user.id == @current_user.id   %>
        <%= link_to("編集" , "/users/#{@user.id}/edit") %>
        
        <%end%>

    </div>
        <% @user.posts.each do |post| %>
            <div class="posts-inde-item">
        <div class="post-show">
            <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
            </div>
            <%= link_to(post.actorname, "/posts/#{post.id}") %>
        </div>
        </div>

        <% end %>
    </div>
</div>