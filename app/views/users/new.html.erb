<div class="main users-new">
    <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <%= form_tag("/users/create") do  %>
    <div class="form users-form">
        <div class="form-body">

        <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
        <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
        </div>
        <% end %> 

        <div class="newform-items">
        <p>ユーザー名</p>
        <input  class="newform-item" name="name" value="<%= @user.name %>">
        <p>メールアドレス</p>
        <input class="newform-item" name="email" value="<%= @user.email %>">
        <p>性別</p>
        <input class="newform-item" name="gender" value="<%= @user.gender %>">
        <p>年齢</p>
        <input class="newform-item" name="age" value="<%= @user.age %>">
        <p>パスワード</p>
        <input class="newform-item" name="password" type="password" value="<%= @user.password %>">
        </div>
        <div class="btn">
        <input class="btn1" type="submit" value="新規登録">
        </div>
        </div>
    </div>
    <% end %>
    </div>
</div>